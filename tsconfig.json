{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es5",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "removeComments": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
